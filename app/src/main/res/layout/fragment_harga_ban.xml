<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f9f9f9">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <!-- Heading atau Judul -->
            <TextView
                android:id="@+id/title_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Harga Ban Bekas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginVertical="16dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnTambahHarga"
                style="@style/RoundedButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="16dp"
                android:text="Tambah Harga" />

            <!-- RecyclerView untuk Produk -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDaftarHargaBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/daftar_hargaban" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
