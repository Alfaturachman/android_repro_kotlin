<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBarLayout for the Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Tambah Stok"
            app:menu="@menu/main"
            app:navigationIcon="@drawable/ic_arrow_left" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- NestedScrollView for scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="UselessParent">

        <!-- Scrollable content goes here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Silahkan untuk menambahkan stok ban bekas"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tanggal Stok"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:hint="Masukan Tanggal"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Jenis Kendaraan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etJenisKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:hint="Pilih Jenis Kendaraan"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Jumlah Stok (kg)"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etJumlahStok"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:hint="Masukan Jumlah Stok (kg)"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Harga Ban Bekas per kg"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etHargaPerKg"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:hint="Masukan Harga Ban Bekas per kg"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Harga Ban Bekas per kg"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTotalHarga"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:ems="10"
                    android:hint="Masukan Total Harga Ban Bekas"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Button Simpan -->
                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Simpan"
                    android:textSize="16sp"
                    android:backgroundTint="@color/purple_700"
                    android:textColor="@android:color/white"
                    style="@style/Widget.Material3.Button.Icon" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
