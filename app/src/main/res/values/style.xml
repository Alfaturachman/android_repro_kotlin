<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OutlineButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_outline</item>
        <item name="backgroundTint">@color/forest_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FillButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_full_rounded</item>
        <item name="backgroundTint">@color/forest_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="backgroundTint">@color/forest_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAlertGrey" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_dialog_background</item>
        <item name="backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/grey_950</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAlertPrimary" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_dialog_background</item>
        <item name="backgroundTint">@color/forest_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- AlertDialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>